value = D.get('x',0)
print(value)
value = D['x'] if 'x' in D else 0
print(value)

#元组
# 创建以后不能再改变，元组是不可变的序列

T = (1,2,3,4)
print(len(T))
T = T+(5,4)
print(T[0])
#查询序号
print(T.index(4))
#查询出现次数
print(T.count(4))

F = ('spam',3.0,[11,22,33])
print(F[1])
print(F[2][2])

#文件
f = open('data.txt','w')
f.write('hello\n')
f.write('world!\n')
f.close()

f = open('data.txt')
text = f.read()
print(text)
print(text.split())
print(text[0])
f.close()

X = set('spam')
