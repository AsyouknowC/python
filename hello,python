print(X,Y)
print('X&Y')
print(X&Y)
print('X|Y')
print(X|Y)
print('X-Y')
print(X-Y)

Z= {x**2 for x in [1,2,3,4]}

print(1/3)
print((2/3)+(1/2))
import decimal
d = decimal.Decimal('3.141')
print(d+1)

decimal.getcontext().prec = 2;
print(decimal.Decimal('1.00')/decimal.Decimal('3.00'))

#分数运算
