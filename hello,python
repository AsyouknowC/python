D={'a':1,'b':2,'c':3}
print(D)
Ks=list(D.keys())
print(Ks)
Ks.sort()
for key in  Ks:
    print(key,'=>',D[key])

H={'a':1,'c':3,'b':2}
for key in H:
    print(key,'=>',H[key])
for key in sorted(H):
    print(key,'=>',H[key])

for c in 'spam':
    print(c.upper())

x= 3;
while x>0:
    print('SPAM!'*x)
    x-=1

squares = [x**2 for x in [1,2,3,4,5]]
print(squares)
square = [];
for x  in [1,2,3,4,5]:
    square.append(x**2)
print(square)

D['e']= 99;
print(D);

#print(D['f']) 无法查询不存在的东西

if not 'f' in  D:
    print('missing')
